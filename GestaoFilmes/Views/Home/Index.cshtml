@{
    ViewData["Title"] = "Sistema de Gestão de Filmes";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Bem-vindo ao Sistema de Gestão de Filmes</h1>
        <p class="lead">Gerencie sua coleção de filmes de forma simples e eficiente</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Catálogo de Filmes</h5>
                    <p class="card-text">Visualize todos os filmes cadastrados, com informações detalhadas sobre cada título.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Adicionar Novo Filme</h5>
                    <p class="card-text">Cadastre novos filmes no sistema com título, gênero, ano e outras informações.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Pesquisar Filmes</h5>
                    <p class="card-text">Encontre rapidamente os filmes que você procura usando nossa ferramenta de busca.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Funcionalidades Principais</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">✓ Cadastro completo de filmes</li>
                        <li class="list-group-item">✓ Edição e atualização de informações</li>
                        <li class="list-group-item">✓ Exclusão de registros</li>
                        <li class="list-group-item">✓ Busca por título e gênero</li>
                        <li class="list-group-item">✓ Visualização detalhada de cada filme</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
